        require(details.reinsurerSigned > 0 && details.cedentSigned > 0, "Contract not yet signed");
        Chainlink.Request memory req = buildOperatorRequest(chainlinkConfig.evaluationJob, this.fulfillEvaluation.selector);
        req.add("termsCid", details.termsCid);
        req.add("keysCid", details.keysCid);
        bytes32 reqId = sendOperatorRequestTo(chainlinkConfig.operator, req, ORACLE_PAYMENT);
        requestIds[reqId] = uid;
    }

    /**
     * Callback function for Chainlink evaluation request, 
     * updates the storm documents hashes and keys for a finished evaluation job
     * @param _requestId bytes32 request ID for associated evaluation job
     * @param _stormCid string IPFS CID for contract storm payouts
     */
    function fulfillEvaluation(bytes32 _requestId, string calldata _stormCid)
        external
        override
        recordChainlinkFulfillment(_requestId)
    {   
        uint256 uid = requestIds[_requestId];
        ContractConfig storage details = contractDetails[uid];
        details.stormsCid = _stormCid;
        details.payoutsGenerated = block.timestamp;
        emit StormEvaluationComplete(uid, details.broker, details.cedent, details.reinsurer, _stormCid);
    }

    /**
     * Method for resetting chainlink config in the event of a required operator change
     * @notice can only be called by an authed proxy
     * @param _chainlinkConfig ChainlinkConfig struct to set
     */
    function updateChainlinkConfig(ChainlinkConfig calldata _chainlinkConfig)
        external
        override
        onlyOwner
        whenPaused
    {
        chainlinkConfig = _chainlinkConfig;
    }

    /**
     * Method for resetting encryption config in the event of key rotations
     * @notice can only be called by an authed proxy
     * @param _encryptionConfig EncryptionConfig struct to set
     */
    function updateEncryptionConfig(EncryptionConfig calldata _encryptionConfig)
        external
        override
        onlyOwner
        whenPaused
    {
        encryptionConfig = _encryptionConfig;
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function newDeadline() external view override returns (uint256) {
        return block.timestamp + 120; // 2 minutes
    }
}